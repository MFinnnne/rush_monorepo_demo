{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
       "./*"
      ]
     },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
  },
  "include": [
    "src/packages/**/*.ts",
    "src/packages/**/*.d.ts",
    "src/packages/**/*.tsx",
    "src/packages/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}